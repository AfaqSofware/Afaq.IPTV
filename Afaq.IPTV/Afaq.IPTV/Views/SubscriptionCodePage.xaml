<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             x:Class="Afaq.IPTV.Views.SubscriptionCodePage" >
 <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20, 100, 20, 100" BackgroundColor="Black">
   <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Center">
     <Label Text=" Activation Code:" VerticalOptions="Center"/>
     <Entry x:Name="EntryActivationCode" Placeholder="Insert your activation code" Keyboard="Numeric" />
   </StackLayout>
   <Button Text="Add"/>
   <Label Text="Subscription added successfully" HorizontalOptions="Center" TextColor="Green"/>
 </StackLayout>
</pages:PopupPage>